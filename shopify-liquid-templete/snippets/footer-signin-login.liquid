<div class="footer-signin-login">
    <div class="footer-signin-login__container">
        <div class="footer-signin-login__element">
            <h4>{{ 'custom.login_and_registration_pages.footer_block_1_header' | t }}</h4>
            <div class="footer-signin-login__element-description">
                {% render 'icon-check-sign' %}
                <p>{{ 'custom.login_and_registration_pages.footer_block_1_text_1' | t }} <br/>
                {{ 'custom.login_and_registration_pages.footer_block_1_text_2' | t }}</p>
            </div>
            <div class="footer-signin-login__element-description">
                {% render 'icon-check-sign' %}
                <p>{{ 'custom.login_and_registration_pages.footer_block_1_text_3' | t }} <br/>
                {{ 'custom.login_and_registration_pages.footer_block_1_text_4' | t }}</p>
            </div>
        </div>
        <div class="footer-signin-login__element">
            <h4>{{ 'custom.login_and_registration_pages.footer_block_2_header' | t }}</h4>
            <div class="footer-signin-login__element-description">
                {% render 'icon-check-sign' %}
                <p>{{ 'custom.login_and_registration_pages.footer_block_2_text_1' | t }}</p>
            </div>
            <!-- <div class="footer-signin-login__element-description">
                {% render 'icon-check-sign' %}
